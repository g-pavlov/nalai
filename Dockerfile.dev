# Development Dockerfile - Optimized for Local Development
# =========================================================
FROM python:3.12.4-slim

# Install development dependencies and build tools
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    git \
    make \
    gcc \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Poetry
RUN pip install poetry==2.1.3 && \
    poetry config virtualenvs.create false

# Copy dependency files first (for better caching)
COPY pyproject.toml poetry.lock ./

# Copy source code directory for Poetry install
COPY src/ ./src/
COPY logging.yaml ./

# Install all dependencies (including dev dependencies and llm group)
RUN poetry install --with llm

# Move api_assistant package to root for desired layout
RUN mv src/api_assistant ./api_assistant

# Create non-root user
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app
USER app

# Expose port
EXPOSE 8080

# Development command with hot reload
CMD ["poetry", "run", "uvicorn", "api_assistant.server:app", "--host", "0.0.0.0", "--port", "8080", "--reload", "--log-config", "logging.yaml"] 